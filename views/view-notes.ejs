<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>View Notes</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5;
        color: #333;
        margin: 20px;
        padding: 20px;
      }
      h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
      }
      h2 {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
      }
      table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
      }
      th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
      }
      th {
        font-weight: bold;
      }
      tr:hover {
        background-color: #f5f5f5;
      }
      a {
        color: #333;
        text-decoration: none;
      }
      input[type="button"] {
        background-color: #4CAF50;
        border: none;
        color: #fff;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-top: 20px;
        cursor: pointer;
        border-radius: 5px;
      }
      input[type="button"]:hover {
        background-color: #3e8e41;
      }
    </style>
  </head>
  <body>
    <h1>Notes for Semester <%= semester %></h1>
    <% Object.keys(subjects).forEach(function(subject) { %>
      <h2><%= subject %></h2>
      <table>
        <thead>
          <tr>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% subjects[subject].forEach(function(note) { %>
            <tr>
              <td><a href="<%= note.notesUrl %>"><%= path.basename(note.notesUrl) %></a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% }); %>
    <a href="/dashboard"><input type="button" value="Back to dashboard"></a>
  </body>
</html>
